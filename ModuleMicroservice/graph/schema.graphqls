# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Module {
  id: ID!
  school_id: ID!
  name: String!
  description: String!
  difficulty: LanguageLevel!
  category: Category!
  made_by: String!
  private: Boolean!
  key: String
  created_at: String
  updated_at: String
  soft_deleted: Boolean
}

type ModuleInfo {
  id: ID!
  school_id: String!
  name: String!
  description: String!
  difficulty: LanguageLevel!
  category: Category!
  made_by: String!
  private: Boolean!
}

type Query {
  getModule(id: ID!): Module
  listModules(filter: ModuleFilter, paginate: Paginator): [ModuleInfo]
}

type Mutation {
  createModule(input: ModuleInputCreate!): Module
  updateModule(id: ID!, input: ModuleInputUpdate!): Module
  deleteModule(id: ID!, filter: ModuleFilter): ID
}

input ModuleInputCreate {
  name: String!
  school_id: String!
  description: String!
  difficulty: LanguageLevel!
  category: Category!
  private: Boolean!
  key: String
}

input ModuleInputUpdate {
  name: String!
  description: String!
  difficulty: LanguageLevel!
  category: Category!
  private: Boolean!
  key: String
}

input ModuleFilter {
  school_id: String
  made_by: String
  softDelete: Boolean
  name: NameFilter
  difficulty: LanguageLevel
  category: Category
  private: Boolean
}

input NameFilter {
  input: [String]!
  type: NameFilterTypes!
}

input Paginator {
  amount: Int!
  Step: Int!
}

enum Category {
  Grammatica
  Spelling
  Woordenschat
  Uitdrukkingen
  Interpunctie
  Werkwoordvervoegingen
  Fast_Track
}

enum LanguageLevel{
  A1
  A2
  B1
  B2
  C1
  C2
}

enum NameFilterTypes {
  eq
  ne
  starts
  ends
}




