# GraphQL schema example
#
# https://gqlgen.com/getting-started/

input ResultFilter {
    softDelete: Boolean
    exerciseId: ID
    userId: ID
    classId: ID
    moduleId: ID
    input: String
    result: Boolean
}

input Paginator {
    amount: Int!
    step: Int!
}

type Result {
    id: ID!
    exercise_id: ID!
    user_id: ID!
    class_id: ID!
    module_id: ID!
    input: String!
    result: Boolean!
    created_at: String!
    updated_at: String!
    soft_deleted: Boolean!
}

type resultInfo {
    id: ID!
    exercise_id: ID!
    user_id: ID!
    class_id: ID!
    module_id: ID!
    input: String!
    result: Boolean!
}

input InputResult {
    exercise_id: ID!
    user_id: ID!
    class_id: ID!
    module_id: ID!
    input: String!
    result: Boolean!
}

type Query {
    ListResults(filter: ResultFilter!, paginator: Paginator!): [resultInfo]
    GetResultsByID(id: ID!): Result
}

type Mutation {
    CreateResult(input: InputResult!): Result
    UpdateResult(id: ID!, input: InputResult!): Result
    DeleteResult(id: ID!): ID
}

